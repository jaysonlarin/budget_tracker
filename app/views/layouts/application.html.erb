<!DOCTYPE html>
<html>
  <head>
    <title>BudgetTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css"/>

    <script type="text/javascript" src="//cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>



  </head>

  <body>
    <div class="ui menu">
      <%= link_to 'Entries', root_path, class: 'item' %>
      <%= link_to 'Categories', categories_path, class: 'item' %>
      <%= link_to 'Todays Entries', prints_path, class: 'item' %>
      <span class='item right f ui block header'>
        Budget Tracker
      </span>
    </div>
    <div class="ui container segment">
      <div id='additions' class="">
        <%= link_to new_entry_path, class: 'ui right button positive' do %>
          <i class="calendar alternate icon"></i>New Entry
        <% end %>
        <%= link_to new_category_path, class: 'ui right floated button positive' do %>
          <i class="clipboard outline icon"></i>New Category
        <% end %>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
